<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:gravity="center"
                                                   android:id="@+id/constraint_layout"
                                                   android:layout_height="wrap_content"
                                                   tools:layout_editor_absoluteX="10dp">

    <TextView
            android:layout_width="wrap_content"
            android:text="ลูกค้า"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_label_partnumber"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/textView17"
            android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="เลขที่"
            android:textSize="@dimen/_17sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/txt_label_partnumber"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="คงเหลือ"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/textView19"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="ลงเรือ"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.21"/>


    <TextView
            android:layout_width="wrap_content"
            android:text="GG123"
            android:textSize="@dimen/_17sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_label_partnumber"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:id="@+id/txt_order_number"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="ที.เค.ดี ไฟเบอร์"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/txt_customer"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="19/03/2019"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:id="@+id/txt_shipping_date"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="8,480.00 "
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView19"
            android:id="@+id/txt_value"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_value"/>


</androidx.constraintlayout.widget.ConstraintLayout>