<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:gravity="center"
                                                   android:id="@+id/constraint_layout"
                                                   android:layout_height="wrap_content"
                                                   tools:layout_editor_absoluteX="10dp">

    <TextView
            android:layout_width="0dp"
            android:text="25/03/2019 11:59"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_receive_date"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="ออร์เดอร์"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_label_partnumber"/>

    <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_17sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/txt_label_partnumber"
            android:textStyle="bold"
            android:text="พาร์ทนัมเบอร์"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="จำนวน"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView19"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="ลูกค้า"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.27980536"/>


    <TextView
            android:layout_width="wrap_content"
            android:text="52393-SR3-004"
            android:textSize="@dimen/_17sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/txt_receive_partnumber"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/txt_label_partnumber"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="Mackay01-03-62 67333"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_receive_order"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textView17"/>

    <TextView
            android:layout_width="0dp"
            android:text="Mackay Consolidated Industries Pty. Ltd. "
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:id="@+id/txt_receive_customer_name"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            app:layout_constraintEnd_toEndOf="parent"
            />



    <TextView
            android:layout_width="0dp"
            android:text="30"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_receive_quantity"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/textView19"/>



    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6958637"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="ผู้บันทึก"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="บันทึกเมื่อ"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"/>

    <TextView
            android:text="เสกสิทธิ์ ศรีพิษ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_receive_tsname"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView3"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_receive_tsname"/>

    <TextView
            android:text="2 วัน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_day_over"
            android:textSize="@dimen/_13sdp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/txt_receive_partnumber"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_receive_order"
            app:layout_constraintStart_toEndOf="@+id/txt_receive_partnumber"
            android:layout_marginStart="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>