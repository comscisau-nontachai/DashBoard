<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:gravity="center"
                                                   android:id="@+id/constraint_layout"
                                                   android:layout_height="wrap_content"
                                                   tools:layout_editor_absoluteX="10dp">

    <TextView
            android:layout_width="0dp"
            android:text="22/03/2019"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_bill_date"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="บันทึกโดย"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_label_partnumber"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_17sdp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:id="@+id/txt_label_partnumber"
            android:textStyle="bold"
            android:text="เลขที่บิล"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="หมายเหตุ"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/textView19"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="ลูกค้า"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.19"/>


    <TextView
            android:layout_width="wrap_content"
            android:text="IV201903/093 "
            android:textSize="@dimen/_17sdp"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_label_partnumber"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:id="@+id/txt_bill_number"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="สุพจน์ จ่อนด้วง	"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_bill_ts_name"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="ห้างหุ้นส่วนจำกัด เอ็น.เค.วาย.(1999)"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:id="@+id/txt_bill_customer_name"
            />

    <TextView
            android:layout_width="0dp"
            android:text="NB2019005 (0.00 THB) "
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView19"
            android:id="@+id/txt_bill_remark"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_bill_remark"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="มูลค่า"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="วันที่"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

    <TextView
            android:text="41,724.00	"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:id="@+id/txt_bill_value"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>